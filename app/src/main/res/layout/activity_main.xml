<?xml version="1.0" encoding ="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--New Note-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/New_Note"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Note"
                android:textSize="27dp"
                android:gravity="center"></TextView>

            <TextView
                android:id="@+id/HourText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Hour"
                android:textSize="20dp"
                android:layout_below="@id/New_Note"/>

            <EditText
                android:id="@+id/Hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="12"
                android:inputType="number"
                android:layout_below="@id/HourText"></EditText>

            <EditText
                android:id="@+id/Minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:inputType="number"
                android:layout_below="@id/HourText"
                android:layout_toRightOf="@id/Hour"></EditText>
            <EditText
                android:id="@+id/AmPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="AM"
                android:layout_below="@id/HourText"
                android:layout_toRightOf="@id/Minute"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textSize="20dp"
                android:layout_below="@id/AmPm"
                android:gravity="center"/>

            <EditText
                android:id="@+id/Note"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="3"
                android:layout_below="@id/Hour"
                android:maxLines="5"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Note"
                android:layout_alignRight="@id/Note"
                android:onClick="Save"
                android:text="@string/Save"/>


         </RelativeLayout>

        <!--Monday-->
